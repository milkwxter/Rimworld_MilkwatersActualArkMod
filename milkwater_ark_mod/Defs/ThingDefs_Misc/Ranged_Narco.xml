<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="BaseWeaponNeolithic">
		<defName>m_NarcoticBow</defName>
		<label>narco bow</label>
		<description>A simple bow made of a few pieces of wood. Loaded with special arrows that induce torpor in victims, which eventually will knock them out.</description>
		<graphicData>
			<texPath>Things/Equipment/WeaponRanged/m_narco_bow</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>1.3</drawSize>
		</graphicData>
		<soundInteract>Bow_Small</soundInteract>
		<costList>
			<WoodLog>35</WoodLog>
			<m_Fiber>25</m_Fiber>
		</costList>
		<statBases>
			<WorkToMake>2600</WorkToMake>
			<Mass>0.9</Mass>
			<AccuracyTouch>0.75</AccuracyTouch>
			<AccuracyShort>0.65</AccuracyShort>
			<AccuracyMedium>0.45</AccuracyMedium>
			<AccuracyLong>0.25</AccuracyLong>
			<RangedWeapon_Cooldown>1.65</RangedWeapon_Cooldown>
		</statBases>
		<weaponClasses>
			<li>Ranged</li>
			<li>RangedLight</li>
		</weaponClasses>
		<recipeMaker>
			<recipeUsers>
				<li>CraftingSpot</li>
			</recipeUsers>
			<skillRequirements>
				<Crafting>3</Crafting>
			</skillRequirements>
		</recipeMaker>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>m_Arrow_Narco</defaultProjectile>
				<warmupTime>1.35</warmupTime>
				<range>22.9</range>
				<soundCast>Bow_Small</soundCast>
			</li>
		</verbs>
		<tools>
			<li>
				<label>limb</label>
				<capacities>
					<li>Blunt</li>
					<li>Poke</li>
				</capacities>
				<power>9</power>
				<cooldownTime>2</cooldownTime>
			</li>
		</tools>
		<rotateInShelves>false</rotateInShelves>
	</ThingDef>
	
	<ThingDef ParentName="BaseProjectileNeolithic">
		<defName>m_Arrow_Narco</defName>
		<label>narco arrow</label>
		<graphicData>
			<texPath>Things/Projectile/Arrow_Small</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile>
			<damageDef>m_TorporDamage</damageDef>
			<damageAmountBase>2</damageAmountBase>
			<speed>44</speed>
		</projectile>
	</ThingDef>

</Defs>