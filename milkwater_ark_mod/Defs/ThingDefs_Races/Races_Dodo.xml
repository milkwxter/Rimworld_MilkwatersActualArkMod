<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="AnimalThingBase">
    <defName>m_Dodo</defName>
    <label>dodo</label>
    <devNote>dodo</devNote>
    <description>The dodo is a small, herbivorous flightless bird. It is quite docile to humans, and their eggs are delicious.</description>
	
	<comps>
		<li Class="Milkwaters_ArkMod.CompProperties_ColorRegions" />
		<li Class="CompProperties_EggLayer">
			<eggUnfertilizedDef>m_Egg_DodoUnfertilized</eggUnfertilizedDef>
			<eggFertilizedDef>m_Egg_DodoFertilized</eggFertilizedDef>
			<eggFertilizationCountMax>1</eggFertilizationCountMax>
			<eggLayIntervalDays>8</eggLayIntervalDays>
			<eggCountRange>1</eggCountRange>
		</li>
	</comps>
	
    <statBases>
      <MoveSpeed>2.5</MoveSpeed>
      <MarketValue>30</MarketValue>
      <ComfyTemperatureMin>-2</ComfyTemperatureMin>
      <FilthRate>1</FilthRate>
      <Wildness>0.0</Wildness>
    </statBases>
	
    <race>
	  <herdAnimal>true</herdAnimal>
      <predator>false</predator>
      <body>Bird</body>
      <leatherDef>Leather_Bird</leatherDef>
      <baseHungerRate>0.2</baseHungerRate>
      <baseBodySize>0.8</baseBodySize>
      <baseHealthScale>0.8</baseHealthScale>
      <foodType>VegetarianRoughAnimal</foodType>
      <trainability>Intermediate</trainability>
      <roamMtbDays>7</roamMtbDays>
      <mateMtbHours>8</mateMtbHours>
      <lifeExpectancy>5</lifeExpectancy>
	  
      <manhunterOnTameFailChance>0.00</manhunterOnTameFailChance>
      <manhunterOnDamageChance>0.00</manhunterOnDamageChance>
	  
      <packAnimal>false</packAnimal>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.20</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>0.33</minAge>
          <soundWounded>m_Dodo_Wounded</soundWounded>
          <soundDeath>m_Dodo_Death</soundDeath>
          <soundCall>m_Dodo_Call</soundCall>
          <soundAngry>m_Dodo_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
    </race>
	
    <tradeTags>
      <li>AnimalCommon</li>
    </tradeTags>
	
    <tools>
      <li>
        <label>beak</label>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>3</power>
        <cooldownTime>1.2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>4</power>
        <cooldownTime>2.0</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
  </ThingDef>

