<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="AnimalThingBase">
    <defName>m_Triceratops</defName>
    <label>triceratops</label>
    <devNote>triceratops</devNote>
    <description>The triceratops, or simply trike, is a medium sized, herbivorous dinosaur known for its deadly horned face. This breed has also evolved a prominent horned-ridge seen in other similar species.</description>
	
	<comps>
		<li Class="Milkwaters_ArkMod.CompProperties_ColorRegions" />
		<li Class="CompProperties_EggLayer">
			<eggUnfertilizedDef>m_Egg_TrikeUnfertilized</eggUnfertilizedDef>
			<eggFertilizedDef>m_Egg_TrikeFertilized</eggFertilizedDef>
			<eggFertilizationCountMax>1</eggFertilizationCountMax>
			<eggLayIntervalDays>8</eggLayIntervalDays>
			<eggCountRange>1</eggCountRange>
		</li>
	</comps>
	<modExtensions>
		<!--
		<li MayRequire="Owlchemist.GiddyUp" Class="GiddyUp.Mountable" />
		<li MayRequire="Owlchemist.GiddyUp" Class="GiddyUp.DrawInFront" />
		-->
	</modExtensions>
	
    <statBases>
      <MoveSpeed>5.3</MoveSpeed>
      <MarketValue>750</MarketValue>
      <ComfyTemperatureMin>-10</ComfyTemperatureMin>
      <FilthRate>6</FilthRate>
      <Wildness>0.0</Wildness>
      <ArmorRating_Sharp>0.60</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.50</ArmorRating_Blunt>
      <ArmorRating_Heat>0.20</ArmorRating_Heat>
    </statBases>
	
    <race>
	  <herdAnimal>true</herdAnimal>
      <predator>false</predator>
      <body>m_Theropod</body>
      <leatherDef>Leather_Lizard</leatherDef>
      <baseHungerRate>0.4</baseHungerRate>
      <baseBodySize>2.5</baseBodySize>
      <baseHealthScale>2.0</baseHealthScale>
      <foodType>VegetarianRoughAnimal</foodType>
      <trainability>Intermediate</trainability>
      <roamMtbDays>7</roamMtbDays>
      <mateMtbHours>8</mateMtbHours>
      <lifeExpectancy>33</lifeExpectancy>
	  
      <manhunterOnTameFailChance>0.00</manhunterOnTameFailChance>
      <manhunterOnDamageChance>0.50</manhunterOnDamageChance>
	  
		<wildBiomes>
			<TemperateForest>0.22</TemperateForest>
			<AridShrubland>0.12</AridShrubland>
			<TropicalRainforest>0.10</TropicalRainforest>
		</wildBiomes>
	  
      <packAnimal>true</packAnimal>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.20</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>0.33</minAge>
          <soundWounded>m_Trike_Wounded</soundWounded>
          <soundDeath>m_Trike_Death</soundDeath>
          <soundCall>m_Trike_Call</soundCall>
          <soundAngry>m_Trike_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
    </race>
	
    <tradeTags>
      <li>AnimalUncommon</li>
    </tradeTags>
	
    <tools>
      <li>
        <label>horns</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>20</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>14</power>
        <cooldownTime>1.2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
  </ThingDef>

