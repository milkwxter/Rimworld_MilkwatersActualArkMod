<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <RecipeDef ParentName="MakeStoneBlocksBase">
    <defName>Make_StoneBlocksAny_CraftingSpot</defName>
    <label>shape any stone blocks</label>
    <description>Shape rock chunks into a few usable stone blocks. Slower and less effective than using a stonecutting table.</description>
    <workerCounterClass>RecipeWorkerCounter_MakeStoneBlocks</workerCounterClass>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>StoneChunks</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>StoneChunks</li>
      </categories>
    </fixedIngredientFilter>
    <specialProducts>
      <li>Butchery</li>
    </specialProducts>
	
    <workAmount>1000</workAmount>
    <recipeUsers>
      <li>CraftingSpot</li>
    </recipeUsers>
  </RecipeDef>

</Defs>
