<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<HediffDef>
		<defName>m_Torpor</defName>
		<label>torpor</label>
		<hediffClass>HediffWithComps</hediffClass>
		
		<description>This pawn is under the effects of torpor. It will eventually fall asleep if the severity continues to rise.</description>

		<comps>
		
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-0.2</severityPerDay>
			</li>
			<li Class="HediffCompProperties_GiveHediff">
				<hediffDef>m_TorporSleep</hediffDef>
				<skipIfAlreadyExists>true</skipIfAlreadyExists>
				<atSeverity>1.0</atSeverity>
				<disappearsAfterGiving>true</disappearsAfterGiving>
			</li>

		</comps>
		
		<initialSeverity>0.001</initialSeverity>
		<defaultLabelColor>(0.45, 0.85, 0.35)</defaultLabelColor>
		<alwaysShowSeverity>true</alwaysShowSeverity>
		<isBad>true</isBad>
		<maxSeverity>1.0</maxSeverity>

		<stages>
			<li>
				<minSeverity>0.0</minSeverity>
				<statOffsets>
					<MoveSpeed>-0.10</MoveSpeed>
				</statOffsets>
			</li>

			<li>
				<minSeverity>0.40</minSeverity>
				<statOffsets>
					<MoveSpeed>-0.30</MoveSpeed>
				</statOffsets>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.10</offset>
					</li>
				</capMods>
			</li>

			<li>
				<minSeverity>0.75</minSeverity>
				<statOffsets>
					<MoveSpeed>-0.60</MoveSpeed>
				</statOffsets>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.25</offset>
					</li>
				</capMods>
			</li>

			<li>
				<minSeverity>1.0</minSeverity>
			</li>
		</stages>
	</HediffDef>
	
	<HediffDef>
		<defName>m_TorporSleep</defName>
		<label>torpor induced sleep</label>
		
		<description>This pawn is under a torpor induced sleep. It will wake up in around a day, but you can easily tame it by bringing it some of it's favorite food.</description>
		<defaultLabelColor>(0.45, 0.85, 0.35)</defaultLabelColor>

		<stages>
			<li>
				<minSeverity>0.0</minSeverity>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.1</setMax>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>



</Defs>
